<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoeToList"
            type="com.udacity.shoestore.models.Shoe" />
        <variable
            name="sStoreViewModelList"
            type="com.udacity.shoestore.ShoeStoreViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_scroll"
        tools:context=".ShoeListFragment">

        <LinearLayout
            android:id="@+id/listLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_wide"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buFab"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/layout_wide"
            android:layout_marginEnd="@dimen/layout_wide"
            android:layout_marginBottom="@dimen/layout_wide"
            android:contentDescription="@string/FAB_CONTENT"
            android:src="@drawable/ic_nav_details_icon" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
